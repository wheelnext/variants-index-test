{
    "$schema": "https://variants-schema.wheelnext.dev/v0.0.2.json",
    "default-priorities": {
        "namespace": [
            "nvidia"
        ]
    },
    "providers": {
        "nvidia": {
            "enable-if": "platform_system == 'Linux'",
            "plugin-api": "nvidia_variant_provider.plugin:NvidiaVariantPlugin",
            "requires": [
                "nvidia-variant-provider>=0.0.2,<1.0.0"
            ]
        }
    },
    "variants": {
        "cuda12": {
            "nvidia": {
                "cuda_version_lower_bound": [
                    "12.0"
                ],
                "sm_arch": [
                    "100_real",
                    "120_real",
                    "50_real",
                    "60_real",
                    "70_real",
                    "80_real",
                    "89_real",
                    "90_real"
                ]
            }
        },
        "cuda13": {
            "nvidia": {
                "cuda_version_lower_bound": [
                    "13.0"
                ],
                "sm_arch": [
                    "100_real",
                    "120_real",
                    "75_real",
                    "80_real",
                    "89_real",
                    "90_real"
                ]
            }
        }
    }
}